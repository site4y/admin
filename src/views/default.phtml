<?php

use s4y\Assets;
use s4y\admin\Admin;

Assets::addStyle('
    .admin_blocks ul {
        list-style: none;
    }
    .admin_blocks li {
        width: 150px;
        float: left;

        text-align: center;
        color: #444;
        margin-right: 10px;
        margin-bottom: 10px;
        padding: 0;
    }

    .admin_blocks .glyphicon {
        font-size: 36px;
        display: block;
        margin-bottom: 15px;
    }

    .admin_blocks a {
        color: #444;
        display: block;
        padding: 10px;
        border: 1px solid #CCC;
        min-height: 125px;
        text-decoration: none;
        transition: background-color .5s, color .3s, box-shadow .5s;
    }

    .admin_blocks a:hover {

        color: #FFF;
        background-color: #00439e;
        box-shadow: 2px 2px 10px #CCC;
    }

    .admin_blocks  a:hover .glyphicon {
        color: #FFF !important;
        transition: color .3s;
    }

