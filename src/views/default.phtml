        font-size: 18px;
    }
');

?>

<?php foreach (Admin::$menu as $head => $items): ?>
<?php if (is_string($head)): ?>
<h2><?= $head ?></h2>
<?php endif; ?>
<div class="admin_blocks container-fluid">
    <ul>
        <?php
            foreach ($items as $id => $item):
                if (!isset($item['title'])) continue;
                $url = (isset($item['url']) ? $item['url'] : null);
                $icon = (isset($item['icon']) ? $item['icon'] : $id);
                $title =  $item['title'];
                $class = null;
                $margin = "";
                if (!isset($url)) {
                    if (isset($item['$class'])) {
                        $url = $id;
                    } elseif (isset($item['$taskClass'])) {
                        $url = 'default&action=task&task='.$id;
                    } elseif (isset($item['$stdAction'])) {
                        $url = 'default&action='.$item['$stdAction'];
                    }
                }

                if (strlen($title) < 50) $margin = ' style="margin-top: 5px"';
                if (isset($item['color'])) {
                    $color = $item['color'];
                    $class = 'admin_'.$id;
                    Assets::addStyle([
                            'color' => $color
                    ], '.'.$class.' .glyphicon');
                    Assets::addStyle([
                        'background-color' => $color
                    ], 'a.'.$class.':hover');
                }
        ?>
            <li>
                <a href="/admin?mod=<?= $url ?>"<?= $class ? ' class="'.$class.'"' : ''?>>
                    <i class="glyphicon glyphicon-<?= $icon ?>"<?= $margin ?>></i>
                    <?= $title ?>
                </a>
            </li>
        <?php endforeach; ?>
    </ul>
</div>
<?php endforeach; ?>

